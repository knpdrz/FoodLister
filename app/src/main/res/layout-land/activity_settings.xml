<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.rhmaarhus.shoplister.shoplister.SettingsActivity"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/stopFollowingBtn"
        android:layout_width="184dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:background="@color/colorDanger"
        android:text="@string/stopFollowing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareListBtn" />

    <Button
        android:id="@+id/shareListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:layout_marginStart="2dp"
        android:text="@string/share"
        app:layout_constraintBottom_toTopOf="@+id/stopFollowingBtn"
        app:layout_constraintStart_toStartOf="@+id/listSettingsTextView"
        app:layout_constraintTop_toBottomOf="@+id/listSettingsTextView" />

    <TextView
        android:id="@+id/listSettingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/shareListBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
